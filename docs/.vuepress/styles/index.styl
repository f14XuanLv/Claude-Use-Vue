// docs/.vuepress/styles/index.styl

// 仅针对 guide 目录下的内容应用样式
.theme-default-content:not(.custom) {
  // 主标题样式
  h1 {
    position: relative
    padding-bottom: 0.5rem
    margin-top: 3rem
    margin-bottom: 2rem
    font-size: 2.25rem
    color: #2d3748

    &::after {
      content: ""
      position: absolute
      bottom: 0
      left: 0
      width: 46.2rem
      height: 3px
      background-color: #4a5568
    }
  }

  // 二级标题样式
  h2 {
    position: relative
    display: flex
    align-items: center
    padding-left: 1rem
    margin-top: 2rem
    margin-bottom: 1.5rem
    font-size: 1.5rem
    color: #4a5568
    line-height: 1.4

    &::before {
      content: ""
      position: absolute
      left: 0
      height: 1.4em
      width: 4px
      background-color: #718096
      border-radius: 2px
    }
  }

  // 三级标题样式
  h3 {
    position: relative
    padding-left: 1.5rem
    margin-top: 1.5rem
    margin-bottom: 1rem
    font-size: 1.25rem
    color: #718096

    &::before {
      content: "•"
      position: absolute
      left: 0.5rem
      color: #a0aec0
    }
  }

  // 列表项样式
  ul {
    padding-left: 1.5rem
    margin-bottom: 1.5rem
  }

  li {
    margin-bottom: 0.5rem
    line-height: 1.6
  }

  // 图片通用样式
  .doc-image {
    margin: 1rem 0
    border: 2px solid #e2e8f0
    border-radius: 4px
  }
}

// 首页样式覆盖
.home {
  .theme-default-content:not(.custom) {
    h1, h2, h3 {
      // 重置首页标题样式
      &::before,
      &::after {
        display: none
      }
      padding: 0
      margin: 0
    }
  }
}